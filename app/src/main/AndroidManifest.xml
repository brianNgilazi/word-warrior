<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.applications.brian.wordWarrior">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name="com.applications.brian.wordWarrior.Presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.applications.brian.wordWarrior.Presentation.HelpActivity"
            android:label="@string/how_to"
            android:parentActivityName="com.applications.brian.wordWarrior.Presentation.MainActivity" />
        <activity android:name="com.applications.brian.wordWarrior.Presentation.CanvasGameActivity"></activity>
    </application>

</manifest>