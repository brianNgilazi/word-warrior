<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_dark_background"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintTop_creator="1"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@android:string/untitled"
                android:textColor="@color/white"
                card_view:layout_constraintLeft_toRightOf="@+id/colorImage"
                card_view:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:text="@android:string/unknownName"
                android:textColor="@android:color/darker_gray"
                card_view:layout_constraintLeft_toRightOf="@+id/colorImage"
                card_view:layout_constraintTop_toBottomOf="@+id/title" />

            <View
                android:id="@+id/view_card_main3_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/light_gray"
                card_view:layout_constraintBottom_toTopOf="@+id/sample_text"
                card_view:layout_constraintLeft_toRightOf="@+id/colorImage" />

            <TextView
                android:id="@+id/sample_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/card_title_margin"
                android:paddingStart="@dimen/card_title_margin"
                android:text="@android:string/unknownName"
                android:textColor="@color/white"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintHorizontal_bias="0.51"
                card_view:layout_constraintLeft_toRightOf="@+id/colorImage"
                card_view:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:id="@+id/colorImage"
                android:layout_width="8dp"
                android:layout_height="160dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintTop_creator="1"
                tools:srcCompat="@drawable/logo" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>