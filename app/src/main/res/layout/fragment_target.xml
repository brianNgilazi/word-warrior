<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="com.applications.brian.targetword.TargetFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/newWord"
        android:visibility="visible"
        android:textSize="20sp"
        android:typeface="monospace"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_above="@+id/gridView"
        android:layout_alignStart="@+id/gridView"
        android:layout_toStartOf="@+id/backSpaceButton"
        android:textStyle="bold" />

    <ListView
        android:layout_width="100dp"
        android:layout_height="90sp"
        android:id="@+id/foundWords"
        android:fillViewport="false"
        android:layout_below="@+id/gridView"
        android:layout_alignStart="@+id/gridView"
        android:verticalScrollbarPosition="right"
        android:fadeScrollbars="false"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/targetTextView"
        android:textSize="15sp"
        android:singleLine="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/scoreTextView"
        android:textSize="15sp"
        android:layout_alignEnd="@+id/progressBar"
        android:layout_below="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/progressBar"
        android:indeterminate="false"
        android:progress="1"
        android:indeterminateOnly="false"
        android:progressTint="@android:color/holo_blue_bright"
        android:layout_below="@+id/gridView"
        android:layout_alignEnd="@+id/clearButton"
        android:layout_toEndOf="@+id/space" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/scoreTextView"
        android:layout_below="@+id/gridView"
        android:layout_toEndOf="@+id/foundWords"
        android:id="@+id/space" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearButton"
        android:contentDescription="@string/clear"
        android:src="@android:drawable/ic_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/submitButton"
        android:adjustViewBounds="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:contentDescription="@string/clear"
        android:src="@android:drawable/ic_input_add"
        android:layout_above="@+id/clearButton"
        android:layout_toEndOf="@+id/gridView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backSpaceButton"
        android:contentDescription="@string/clear"
        android:src="@android:drawable/ic_input_delete"
        android:layout_marginEnd="50dp"
        android:layout_alignTop="@+id/newWord"
        android:layout_alignEnd="@+id/gridView"
        android:layout_above="@+id/gridView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goodStar"
        android:src="@drawable/ic_star"
        android:contentDescription=""
        android:visibility="invisible"
        android:layout_below="@+id/targetTextView"
        android:layout_toStartOf="@+id/newWord" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greatStar"
        android:src="@drawable/ic_star"
        android:contentDescription=""
        android:visibility="invisible"
        android:layout_below="@+id/targetTextView"
        android:layout_alignEnd="@+id/foundWords"
        android:layout_marginEnd="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/perfectStar"
        android:src="@drawable/ic_star"
        android:contentDescription=""
        android:visibility="invisible"
        android:layout_below="@+id/targetTextView"
        android:layout_toEndOf="@+id/greatStar" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_refresh"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/scoreTextView" />

    <GridView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:id="@+id/gridView"
        android:numColumns="3"
        android:choiceMode="multipleChoice"
        android:verticalSpacing="15sp"
        android:textAlignment="center"
        style="@style/Animation.AppCompat.DropDownUp"
        android:layoutMode="clipBounds"
        android:listSelector="@android:color/holo_blue_dark"
        android:stretchMode="columnWidth"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
